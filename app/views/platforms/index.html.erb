<% provide(:title, "东帝汶号码") %>
<h1 class="page-header">东帝汶号码</h1>

<hr>
<% if @platform.any? %>
  <div class="row-fluid">
    <div class="span6">
      <p>
        <%= link_to 'javascript::void(0);', :data => {:toggle => :checkboxes, :action => :check, :range => 'true'} do %>
          <i class="glyphicon glyphicon-ok text-success"> </i>全选
        <% end %>

        <span> / </span>

        <%= link_to 'javascript::void(0);', :data => {:toggle => :checkboxes, :action => :uncheck, :range => 'true'} do %>
          <i class="glyphicon glyphicon-remove text-danger"> </i>全不选
        <% end %>

        <span> / </span>

        <%= link_to 'javascript::void(0);', :data => {:toggle => :checkboxes, :action => :toggle, :range => 'true'} do %>
          <i class="glyphicon glyphicon-refresh text-warning"> </i>反选
        <% end %>

        <span> / </span>

        <%= link_to "#", id: 'batch_destroy' do %>
          <i class="glyphicon glyphicon-trash text-primary"> </i>删除选中
        <% end %>

        <span> / </span>

        <%= link_to "#", id: 'batch' do %>
          <i class="glyphicon glyphicon-download-alt text-primary"> </i>批量修改状态为未使用
        <% end %>
      </p>
    </div>
  </div>
  <hr>
  <h3>数据总量：<%= @platform.count %></h3>
  <hr>
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th width="5%"></th>
        <th width="60%">数据</th>
        <th width="10%">状态</th>
        <th width="25%">操作</th>
      </tr>
    </thead>
    <tbody>
      <% @platform.each do |platform| %>
      <tr>
        <td>
          <label>
            <%= check_box_tag "platform_ids[#{platform.id}]", platform.id, false, :class => 'ace ace-checkbox-1 platform-checkbox' %>
            <span class="lbl"> </span>
          </label>
        </td>
        <td><%= platform.data %></td>
        <% if platform.is_use == 2 %>
          <td class="text-danger">注册成功</td>
        <% elsif platform.is_use == 1 %>
          <td class="text-info">使用中</td>
        <% else %>
           <td class="text-success">未使用</td>
        <% end %>
        <td>
          <%= link_to '改为未使用', platform_path(platform), class: 'btn btn-info', method: :put %>
          <%= link_to '删除', platform_path(platform), class: 'btn btn-danger', data:{confirm: '确定删除吗?'}, method: :delete %>

        </td>

      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<script>
  $('[data-toggle=checkboxes][data-action=check]').click(function(e){
    e.preventDefault();
    $('.platform-checkbox').prop('checked', true)
    return false;
  });

  $('[data-toggle=checkboxes][data-action=uncheck]').click(function(e){
    e.preventDefault();
    $('.platform-checkbox').prop('checked', false)
    return false;
  });

  $('[data-toggle=checkboxes][data-action=toggle]').click(function(e){
    e.preventDefault();
    var checkboxes = $('.platform-checkbox');
    for(var i = 0; i<checkboxes.length; i++){
      var status = $(checkboxes[i]).prop('checked');
      $(checkboxes[i]).prop('checked', !status);
    }
    return false;
  });


  $("#batch_destroy").click(function () {
    var platform_ids = [];
    $.each($('.platform-checkbox:checked'), function () {
      platform_ids.push($(this).val());
    });

    if (platform_ids.length > 0) {
      $("#batch_destroy").attr("href", "destroy_platforms?platform_ids="+platform_ids)
      setTimeout(function(){
        window.location.reload()
      },2000);
    } else {
      alert('你没有勾选任何帐号!');
      $("#batch_destroy").attr("href", "#")
    }
  })

  $("#batch").click(function () {
    var platform_ids = [];
    $.each($('.platform-checkbox:checked'), function () {
      platform_ids.push($(this).val());
    });

    if (platform_ids.length > 0) {
      $("#batch").attr("href", "batch_update_platforms?platform_ids="+platform_ids)
      setTimeout(function(){
        window.location.reload()
      },2000);
    } else {
      alert('你没有勾选任何帐号!');
      $("#batch").attr("href", "#")
    }
  });

</script>
